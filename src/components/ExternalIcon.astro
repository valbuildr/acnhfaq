---
import type { HTMLAttributes } from "astro/types";

type Props = {
    icon: string;
    category: string;
    host?: string;
} & HTMLAttributes<"img">;

const { icon, category, host, class: customClass, ...restProps } = Astro.props;
---

<>
    <img
        class:list={["h-8", "inline-block", "align-middle", "m-0", customClass]}
        {...restProps}
        src={"https://" +
            (host ?? "acnhcdn.com/latest") +
            "/" +
            category +
            "/" +
            icon +
            ".png"}
    />
</>
