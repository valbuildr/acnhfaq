---
import type { HTMLAttributes } from "astro/types";

type Button =
    | "Amiibo"
    | "arw-Left"
    | "arw-Right"
    | "Bells"
    | "Chat"
    | "Ex"
    | "Minus"
    | "NM"
    | "Plus"
    | "Power"
    | "Talk"
    | "A"
    | "B"
    | "Capture"
    | "Home"
    | "L"
    | "L-S"
    | "PressL-S"
    | "PressR-S"
    | "R"
    | "R-S"
    | "SL"
    | "SR"
    | "X"
    | "Y"
    | "ZL"
    | "ZR";

type Props = { button: Button } & HTMLAttributes<"span">;

const { button, class: customClass, ...restProps } = Astro.props;
---

<>
    <span
        class:list={["m-0", "button-glyph", "button-" + button]}
        {...restProps}></span>
</>

