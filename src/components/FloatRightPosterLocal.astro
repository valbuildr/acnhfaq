---
/**
 * Displays a locally hosted poster as a infobox on the right side.
 * URL = "{folder}/{poster}.{format}"
 * * @param {string} poster - The poster to show.
 * * @param {string} [folder] - The folder where the poster is stored. Defaults to `/assets/img/posters`.
 * * @param {string} [format] - The format of the poster. Defaults to `png`.
 * * @param {string} [class] - Classes to add to the div.
 * * @param ...restProps - Any other props to give to the div.
 */

// this is not currently used anywhere, but i created it to prepare for 3.0.0 content -valbuildr

import type { HTMLAttributes } from "astro/types";

type Props = {
    poster: string;
    folder?: string;
    format?: string;
    class?: string;
} & HTMLAttributes<"div">;

const {
    poster,
    folder,
    format,
    class: customClass,
    ...restProps
} = Astro.props;
---

<div
    class:list={[
        "float-right ml-4 mb-4 bg-black/10 dark:bg-white/10 py-2 rounded-lg",
        customClass,
    ]}
    {...restProps}
>
    <img
        src={(folder ?? "/assets/img/posters") +
            "/" +
            poster +
            "." +
            (format ?? "png")}
    />
</div>
